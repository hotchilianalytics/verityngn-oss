# Streamlit Secrets Configuration Example
# 
# For Streamlit Cloud:
#   - Copy this content to your app's "Secrets" section in the dashboard
#   - Update all placeholder values with your actual credentials
#
# For Local Development:
#   - Copy this file to: .streamlit/secrets.toml
#   - Update values and run: streamlit run ui/streamlit_app.py
#
# ⚠️  NEVER commit secrets.toml to git! It's in .gitignore for safety.

# ==============================================================================
# Google Cloud API Keys
# ==============================================================================

GOOGLE_SEARCH_API_KEY = "AIza..."  # Your Google Custom Search API key
CSE_ID = "your-cse-id-here"        # Custom Search Engine ID
YOUTUBE_API_KEY = "AIza..."        # YouTube Data API v3 key

# ==============================================================================
# Google Cloud Project Settings
# ==============================================================================

PROJECT_ID = "verityindex-0-0-1"   # Your GCP project ID
LOCATION = "us-central1"           # GCP region
GCS_BUCKET_NAME = "verityindex_bucket"

# ==============================================================================
# Application Settings
# ==============================================================================

DEBUG_OUTPUTS = "true"             # Enable debug output directory
DEPLOYMENT_MODE = "research"       # research|container|production
STORAGE_BACKEND = "local"          # local|gcs

# ==============================================================================
# Google Service Account JSON
# ==============================================================================
# Paste the ENTIRE contents of your service account JSON file below
# Make sure to maintain proper TOML format (keep the structure intact)
#
# To get your service account JSON:
#   1. Go to: https://console.cloud.google.com/iam-admin/serviceaccounts
#   2. Select your project
#   3. Click on your service account → Keys → Add Key → Create New Key → JSON
#   4. Download the JSON file
#   5. Copy its contents below

[gcp_service_account]
type = "service_account"
project_id = "verityindex-0-0-1"
private_key_id = "abc123..."
private_key = "-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@verityindex-0-0-1.iam.gserviceaccount.com"
client_id = "123456789..."
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs/your-service-account%40verityindex-0-0-1.iam.gserviceaccount.com"
universe_domain = "googleapis.com"

# ==============================================================================
# Optional Settings
# ==============================================================================

